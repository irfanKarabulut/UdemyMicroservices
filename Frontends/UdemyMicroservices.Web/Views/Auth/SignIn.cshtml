@{
    ViewData["Title"] = "SignIn";
}

@model UdemyMicroservices.Web.Models.SignInInput


<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Üye Giriş</h5>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <form asp-controller="Auth" asp-action="SignIn" method="post">
                    <div class="mb-3">
                        <label asp-for="Email"  class="form-label"></label>
                        <input asp-for="Email" type="email" class="form-control"aria-describedby="emailHelp">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" type="password" class="form-control">
                    </div>
                    <div class="mb-3 form-check">
                        <input asp-for="IsRemember" type="checkbox" class="form-check-input">
                        <label asp-for="IsRemember" class="form-check-label" ></label>
                    </div>
                    <button type="submit" class="btn btn-primary">Giriş yap</button>
                </form>

            </div>
        </div>
    </div>
</div>




