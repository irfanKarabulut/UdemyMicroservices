@{
    ViewData["Title"] = "Home Page";
}
@model List<CourseViewModel>

<h2>Kurslar</h2>

<div class="row">

    @if (Model != null && Model.Any())
    {
        @foreach (var item in Model)
        {

            <div class="col-md-4">

                <div class="card">
                    <img src="@item.StockPictureUrl" class="card-img-top" alt="Resim yok">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.ShortDescription</p>
                        <h5 class="badge bg-primary">@item.Category.Name</h5>
                        <h4 class="text-primary">@item.Price TL</h4>                        
                       
                        <a class="btn btn-success" asp-controller="Home" asp-action="Detail" asp-route-id="@item.Id">Detay</a>
                    </div>
                </div>

            </div>

        }
    }

</div>


