@{
    ViewData["Title"] = "Index";
}
@model List<CourseViewModel>



<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Kurslar</h5>

                <a asp-controller="Courses" asp-action="Create" class="btn btn-primary mb-2">Yeni kurs oluştur</a>

                @if (Model != null && Model.Any())
                {
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Katogori</th>
                                <th>Resim</th>
                                <th>Kurs İsmi</th>
                                <th>Fiyat</th>
                                <th>Süre</th>
                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Category.Name</td>
                                    <td>
                                        <img style="width:72px" src="@item.StockPictureUrl" class="img-thumbnail" />
                                    </td>
                                    <td>@item.Name</td>
                                    <td>@item.Price</td>
                                    <td>@item.Feature.Duration</td>
                                    <td>
                                        <a asp-controller="Courses" asp-action="Update" asp-route-id="@item.Id" class="btn btn-success btn-sm">Güncelle</a>

                                        <a asp-controller="Courses" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="aler alert-info"> 
                        Kurs bulunamadı...
                    </div>
                }
            </div>
        </div>
    </div>
</div>

